                     </VBox.margin>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </TextField>
                  <Label prefHeight="26.0" prefWidth="297.0" text="Allocate Time" textFill="#274472">
