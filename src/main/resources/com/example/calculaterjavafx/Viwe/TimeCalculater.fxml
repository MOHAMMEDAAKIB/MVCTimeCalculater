<AnchorPane prefHeight="400.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.calculaterjavafx.Controller.TimeCalculaterController">
   <children>
      <BorderPane prefHeight="400.0" prefWidth="307.0">
         <top>
            <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="52.0" prefWidth="322.0" text="Time Calculater" textAlignment="CENTER" textFill="#274472" BorderPane.alignment="CENTER">
